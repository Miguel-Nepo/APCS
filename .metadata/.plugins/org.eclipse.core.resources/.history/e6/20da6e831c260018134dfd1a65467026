import java.util.Arrays;
import java.util.Scanner;
import static java.lang.System.*;
import static java.util.Arrays.*;

public class Grades
{
	private double[] grades;
	
	public Grades()
	{
		setGrades("");
	}
	
	public Grades(String gradeList)
	{
		setGrades(gradeList);		
	}
	
	public void setGrades(String gradeList)
	{	
		Scanner s = new Scanner(gradeList);
		if (s.hasNextInt()){
			int howMany = s.nextInt();
			grades = new double[howMany];
		}
		else grades = new double[0];

		if (s.hasNext()){
			s.next();
		}
		for (int i = 0;i<grades.length;i++){
			grades[i]=s.nextDouble();
		}
	}
	
	public void setGrade(int spot, double grade)
	{
		grades[spot]=grade;
	}
	
	public double getSum()
	{
		double sum=0.0;
		for (double i:grades){
			sum+=i;
		}

		return sum;
	}
	
	public double getLowGrade()
	{
		double low = Double.MAX_VALUE;
		for (double i:grades){
			if (i<low){
				i=low;
			}
		}
		return low;
	}
	
	public double getHighGrade()
	{
		double high = Double.MIN_VALUE;
		for (double i:grades){
			if (i<high){
				i=high;
			}
		}
		return high;
	}
	
	public int getNumGrades()
	{
		return grades.length;
	}
	
	public String toString()
	{
		String output="";
		for (double i:grades){
			output += i;
		}

		output +="\nsum = "+getSum()+ "\nnum grades = "+getNumGrades()+"\nlow grade = "+getLowGrade()+"\nhigh grade = "+getHighGrade();


		return output;
	}	
}