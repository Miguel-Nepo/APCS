public class Circle
{
	private double radius;
	private double area;

	public void setRadius(double rad)
	{
		radius = rad;
	}


	public void calculateArea( )
	{
		setRadius(radius);
		area = 2*3.14*radius;
	}

	public void print( )
	{
		calculateArea();
		System.out.println(area);
	}
}